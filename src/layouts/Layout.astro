---
import StructuredData from '../components/StructuredData.astro';
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		
		<!-- SEO Meta Tags -->
		<title>Focar</title>
		<meta name="description" content="simples sitezito de pomodoro" />
		<meta name="keywords" content="pomodoro, timer, foco, produtividade, concentração, gestão de tempo, pausa, break" />
		<meta name="author" content="Luma Montes" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://focar.netlify.app/" />
		<meta property="og:title" content="Focar" />
		<meta property="og:description" content="simples sitezito de pomodoro" />
		<meta property="og:image" content="https://focar.netlify.app/focar.png" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:image:alt" content="Focar - Timer Pomodoro" />
		<meta property="og:locale" content="pt_BR" />
		<meta property="og:site_name" content="Focar" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://focar.netlify.app/" />
		<meta property="twitter:title" content="Focar" />
		<meta property="twitter:description" content="simples sitezito de pomodoro" />
		<meta property="twitter:image" content="https://focar.netlify.app/focar.png" />
		<meta property="twitter:image:alt" content="Focar - Timer Pomodoro" />
		<meta property="twitter:creator" content="@lumamontes" />
		
		<!-- Additional Meta Tags -->
		<meta name="robots" content="index, follow" />
		<meta name="googlebot" content="index, follow" />
		<meta name="theme-color" content="#ccc" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="default" />
		<meta name="apple-mobile-web-app-title" content="Focar" />
		
		<!-- Favicon -->
		<link rel="icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" href="/focar.png" />
		<link rel="manifest" href="/manifest.json" />
		
		<!-- Generator -->
		<meta name="generator" content={Astro.generator} />
		
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Azeret+Mono:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		
		<!-- Structured Data -->
		<StructuredData />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: "Azeret Mono", monospace;
	  font-optical-sizing: auto;
	  font-style: normal;
	}
</style>
